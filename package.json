{
  "name": "mern-template",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/vipulrawat/mern-template.git",
  "author": "vipulrawat <vipulrawat.imi@live.in>",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^4.0.1"
  },
  "scripts": {
    "install": "(cd client && npm install) && (cd server && npm install)",
    "start": "concurrently \"cd client && PORT=3000 npm run start\" \"cd server && PORT=3001 npm run start\"",
    "lint:dev": "(cd client && npm run lint)"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:dev"
    }
  },
  "devDependencies": {
    "husky": "^1.1.4"
  }
}
